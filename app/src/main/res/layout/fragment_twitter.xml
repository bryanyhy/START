<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ambiesoft.start.view.fragment.TwitterFragment">

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Tweet"
        android:id="@+id/postTweetButton"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Tweet"
        android:id="@+id/getTweetButton"
        android:layout_below="@+id/postTweetButton"
        android:layout_alignEnd="@+id/postTweetButton" />

</RelativeLayout>
