<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.FilterResultFragment"
    android:padding="10dp">

    <!-- TODO: Update blank fragment layout -->
    <!--TODO:pop up menu?-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/buttonText"
            android:text="Keywords in performance&apos;s name"
            android:id="@+id/textView5" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Like: Guitar/Busker Name/Location"
            android:id="@+id/keywordInput"
            android:backgroundTint="@color/colorTint"
            android:textColor="@color/textColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/buttonText"
            android:id="@+id/textView9" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/categorySpinner"
            android:backgroundTint="@color/colorTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/buttonText"
            android:id="@+id/textView11" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose a date"
            android:id="@+id/dateButton"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/buttonText"
            android:background="@color/theme2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Period"
            android:textColor="@color/buttonText"
            android:id="@+id/textView12" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a Time"
                android:id="@+id/timeButton"
                android:layout_weight="0.6"
                android:textColor="@color/buttonText"
                android:background="@color/theme1"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Search your busking!"
            android:id="@+id/filterButton"
            android:textColor="@color/buttonText"
            android:background="@color/theme5"/>
    </LinearLayout>
</RelativeLayout>
